generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Season {
  SS //Spring + Summer
  FW // Fall + Winter
}

model Product {
  id        String   @id @default(cuid())
  title     String
  price     Int      @default(0)   // 先給預設值，讓既有資料能過
  description String?  @db.Text

  year  Int
  season Season

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  variants  Variant[]

  @@index([year, season])
}



model Variant {
  id        String   @id @default(cuid())
  color     String   // 顏色名稱（例：White, Black, Navy）
  thumbnails String[] // 這個顏色對應的圖片列表
  product   Product  @relation(fields: [productId], references: [id])
  productId String

  sizes     Size[]
}

model Size {
  id        String   @id @default(cuid())
  label     String   // 尺寸（例：1, 2, 3）
  stock     Int      // 庫存數量
  variant   Variant  @relation(fields: [variantId], references: [id])
  variantId String
}